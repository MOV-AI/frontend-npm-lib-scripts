{
    "esModuleInterop": true,
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist/",
        "sourceMap": true,
        "strictNullChecks": true,
        "module": "ESNext",
	"declaration": true,
        "jsx": "react",
        "target": "esnext",
        "allowJs": true,
	"esModuleInterop": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
	"downlevelIteration": true,
	"experimentalDecorators": true,
	"useDefineForClassFields": false,
        "lib": [
            "es2021",
            "dom"
        ],
        "types": [
		"node"
        ]
    },
    "exclude": [
        "**/*.test.*",
	"./dist/"
    ],
    "include": [
        "./src/",
        "./lib/"
    ],
    "transform": {}
}
